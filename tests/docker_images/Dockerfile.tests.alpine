# The student will be user "bob" and their password will be "bob"
FROM alpine:3

# Install stuff
RUN apk add --no-cache python3 py3-pip
RUN python3 -m pip --no-cache-dir install dill tblib python-lorem 

# Make new user and allow them to use sudo
RUN adduser -D bob
USER bob
WORKDIR /home/bob

CMD ["sh"]
